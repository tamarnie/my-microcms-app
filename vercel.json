{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/js/(.*)",
      "destination": "/public/js/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/public/assets/$1"  
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}